<div class="container mx-auto px-4 py-8">
<h1 class="text-2xl font-bold mb-6">👤 <%= current_user.username %></h1>

<!-- Profile Summary -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-sm text-gray-500">Email</p>
    <p class="text-lg font-semibold text-gray-800"><%= @user.email %></p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-sm text-gray-500">Recommendations</p>
    <p class="text-2xl font-bold text-blue-600"><%= @recommendations.count %></p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-sm text-gray-500">Votes Received</p>
    <p class="text-2xl font-bold text-green-600"><%= @recommendations.joins(:votes).count %></p>
  </div>
  <div class="bg-white shadow rounded-lg p-4 text-center">
    <p class="text-sm text-gray-500">Votes Cast</p>
    <p class="text-2xl font-bold text-purple-600"><%= @votes_count %></p>
  </div>
</div>

<h2 class="text-xl font-semibold mb-4">📚 Your Recommendations</h2>

<!-- Recommendations Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @recommendations.each do |rec| %>
    <div class="bg-white shadow-md rounded-xl p-4 flex flex-col h-full">
      <img src="<%= rec.book.image_url %>" alt="<%= rec.book.title %>" class="rounded w-full h-48 object-cover mb-2">
      <h2 class="text-lg font-semibold"><%= rec.book.title %></h2>
      <p class="text-sm text-gray-500 mb-1">by <%= rec.book.author %></p>
      <p class="text-sm mt-2 text-gray-700"><%= truncate(rec.review, length: 120) %></p>
      <p class="text-xs text-gray-400 mt-auto">Recommended by you</p>
      <span class="mt-2 inline-block text-sm text-blue-600 font-medium">
        👍 <%= rec.votes.count %> votes
      </span>
    </div>
  <% end %>
</div>
</div>
