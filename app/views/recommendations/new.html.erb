
<div class="container mx-auto px-4 py-8">
<h1 class="text-xl font-bold mb-4">Add a Recommendation for <%= @book.title %></h1>

<%= form_with model: [@book, @recommendation], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :review, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :review, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm", rows: 5 %>
  </div>
  <%= f.submit "Submit Recommendation", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>

</div>
